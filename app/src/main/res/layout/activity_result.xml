<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optimizer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textyield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arrived Yield: "
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Profit obtained: "
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Optimal Inputs"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/texttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textmg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magnesium sulphate: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Glucose: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disodium hydrogen phosphate: "
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        />
</LinearLayout>